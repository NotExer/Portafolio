<style>

*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  text-decoration: none;
  font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 50px 80px;
  position: relative;
}

.Logo-image {
  width: 70px;
  height: 70px;
}

.burger {
  width: 30px;
  height: 22px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  cursor: pointer;
  z-index: 20;
  transition: transform 0.3s ease-in-out;
}


.burger span {
  width: 33px;
  height: 8px;
  background: #000;
  border-radius: 1px;
    transition: transform 0.3s ease, opacity 0.3s ease;
}
.burger::before {
  content: "";
  position: absolute;
  width: 40px;
  height: 40px;
  background-color: #fff; /* fondo oscuro */
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 1;
}


.burger.active .top {
  transform: rotate(45deg) translate(5px, 5px);
  background-color: #fff;
  transition: 0.3s ease;
}


.burger.active .bottom {
  transform: rotate(-45deg) translate(5px, -5px);
  background-color: #fff;
    transition: 0.3s ease;
}
.nav-links {
  list-style: none;
  position: fixed;
  top: 0;
  right: -50vw;         /* Lo escondemos completamente a la derecha (la mitad de la pantalla) */
  height: 100vh;
  width: 50vw;          /* Ocupa la mitad del ancho de la pantalla */
  background-color: #222;
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding: 100px 20px;
  transition: right 0.3s ease-in-out;
  z-index: 15;
  justify-content: center;
  align-items: start;
}


.nav-links li a {
  color: white;
  font-size: 3.5rem;
  text-decoration: none;
  font-weight: 700 ;
  transition: color 0.3s ease;
  margin: 60px 0px;

}

/* Mostrar menú al activarlo */
.nav-links.active {
  right: 0;



}

</style>

<script type="text/javascript">
function toggleMenu() {
  const nav = document.getElementById('navLinks');
  const burger = document.getElementById('burger');

  nav.classList.toggle('active');
  burger.classList.toggle('active');
}

</script>
